generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String            @id @default(cuid())
  name             String
  userIdOld        String?
  email            String            @unique
  password         String?
  role             Role              @default(BUYER)
  createdAt        DateTime          @default(now())
  image            String?
  emailVerified    DateTime?
  lastLogin        DateTime          @default(now())
  status           UserStatus        @default(INACTIVE)
  isSigninSuccess  Boolean?          @default(true)
  resetToken       String?
  resetTokenExpiry DateTime?
  accounts         Account[]
  BusinessForSale  BusinessForSale[]
  inquiries        Inquiry[]         @relation("buyer")
  inquiriesSeller  Inquiry[]         @relation("seller")
  messageReceived  Message[]         @relation("ReceivedMessages")
  messageSent      Message[]         @relation("SentMessages")
  Message          Message[]
  orders           Order[]
  OrderItem        OrderItem[]
  OrderPayment     OrderPayment[]
  products         Product[]         @relation("SellerProducts")
  ratings          Rating[]
  sellerBankInfo   SellerBankInfo?
  sellerProfile    SellerProfile?
  Service          Service[]
  sessions         Session[]
  wantedItems      WantedItem[]
  favorites        Product[]         @relation("UserFavorites")

  secondaryEmails SecondaryEmail[]
}

model SecondaryEmail {
  id       String  @id @default(cuid())
  email    String  @unique // Add this line
  password String?
  userId   String
  user     User    @relation(fields: [userId], references: [id], onDelete: Cascade) // Add onDelete Cascade
}

model Service {
  id                String          @id @default(cuid())
  title             String
  callOutCharges    Float
  ratePerHour       Float
  experience        String
  areaOfService     String
  email             String
  contactNumber     String
  companyType       CompanyType
  address           String
  description       String
  isFeatured        Boolean         @default(false)
  isEnabled         Boolean         @default(true)
  category          ServiceCategory
  pictureUrl        String?
  userId            String
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  featureDays       String?
  featuredEndDate   DateTime?
  featuredStartDate DateTime?
  user              User            @relation(fields: [userId], references: [id])
}

model WantedItem {
  id          String       @id @default(cuid())
  title       String
  location    String
  description String
  imageUrl    String
  userId      String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  contactInfo ContactInfo? @relation("ItemContact")
  user        User         @relation(fields: [userId], references: [id])
}

model BusinessForSale {
  id             String       @id @default(cuid())
  title          String
  businessType   String
  location       String
  annualTurnover String
  reasonFoSale   String
  imageUrl       String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  userId         String
  description    String
  user           User         @relation(fields: [userId], references: [id])
  contactInfo    ContactInfo? @relation("BusinessContact")
}

model ContactInfo {
  id              String           @id @default(cuid())
  email           String
  phone           String
  wantedId        String?          @unique
  businessId      String?          @unique
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  fullName        String?
  businessForSale BusinessForSale? @relation("BusinessContact", fields: [businessId], references: [id])
  wantedItem      WantedItem?      @relation("ItemContact", fields: [wantedId], references: [id])
}

model SellerProfile {
  id              String      @id @default(cuid())
  userId          String      @unique
  businessName    String
  city            String // address
  country         String // postcode
  verified        Boolean     @default(false)
  town            String? // city
  phoneNumber     String
  stripeAccountId String?
  bio             String?
  stripStatus     StripStatus @default(PENDING)
  user            User        @relation(fields: [userId], references: [id])
}

model SellerBankInfo {
  id              String   @id @default(cuid())
  userId          String   @unique
  accountHolder   String
  sortCode        String
  accountNumber   String
  bankName        String?
  iban            String?
  swiftCode       String?
  paypalEmail     String?
  preferredMethod String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id])
}

model AdminSetting {
  id        String       @id @default(cuid())
  key       String       @unique
  value     String
  type      SettingType?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model Product {
  id                 String           @id @default(cuid())
  title              String
  description        String
  price              Float
  discountPercentage Float?
  discountPrice      Float?
  dealStartDate      DateTime?
  dealEndDate        DateTime?
  isDealActive       Boolean          @default(false)
  imagesUrl          String[]
  videoUrl           String?
  isFeatured         Boolean          @default(false)
  condition          ProductCondition
  categoryId         String
  sellerId           String
  socialMediaPosted  Boolean          @default(false)
  createdAt          DateTime         @default(now())
  featuredEndDate    DateTime?
  featuredStartDate  DateTime?
  status             ProductStatus    @default(HIDDEN)
  units              Int
  featureDays        String?
  weight             Float? // weight or delivery_charge if product is machine
  delivery_charge    Float?
  isIncVAT           Boolean?         @default(false)
  slug               String?
  stock              Int?
  markAsDeleted      Boolean          @default(false)
  Inquiry            Inquiry[]
  orderItem          OrderItem[]
  category           Category         @relation(fields: [categoryId], references: [id])
  seller             User             @relation("SellerProducts", fields: [sellerId], references: [id])
  ratings            Rating[]
  favoritedBy        User[]           @relation("UserFavorites")
}

model OrderPayment {
  id                  String             @id @default(cuid())
  orderId             String
  sellerId            String
  amount              Float
  paymentIntentId     String             @unique
  status              OrderPaymentStatus @default(PENDING)
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt
  shippedAt           DateTime?
  shippingProofUrl    String?
  trackingNumber      String?
  isAdminPaidToSeller Boolean            @default(false)
  order               Order              @relation(fields: [orderId], references: [id])
  seller              User               @relation(fields: [sellerId], references: [id])
}

model Order {
  id                 String             @id @default(cuid())
  userId             String
  totalPrice         Float
  createdAt          DateTime           @default(now())
  status             OrderStatus        @default(PENDING)
  shippingAddress    String?
  shippingCity       String?
  shippingCountry    String?
  shippingPhone      String?
  shippingPostalCode String?
  commisionRate      Float?             @default(4)
  stripCommission    Float              @default(2.5)
  Message            Message[]
  notificationOrder  NotificationOrder?
  user               User               @relation(fields: [userId], references: [id])
  orderItems         OrderItem[]
  orderPayments      OrderPayment[]
}

model NotificationOrder {
  id      String             @id @default(cuid())
  orderId String             @unique
  status  NotificationStatus
  order   Order              @relation(fields: [orderId], references: [id])
}

model Message {
  id             String   @id @default(cuid())
  content        String
  sender         String
  orderId        String
  senderUserId   String
  receiverUserId String
  createdAt      DateTime @default(now())
  userId         String?
  isReceiverRead Boolean  @default(false)
  order          Order    @relation(fields: [orderId], references: [id])
  receiverUser   User     @relation("ReceivedMessages", fields: [receiverUserId], references: [id])
  senderUser     User     @relation("SentMessages", fields: [senderUserId], references: [id])
  User           User?    @relation(fields: [userId], references: [id])
}

model OrderItem {
  id               String          @id @default(cuid())
  orderId          String
  productId        String
  sellerId         String
  quantity         Int
  unitPrice        Float
  createdAt        DateTime        @default(now())
  paymentIntentId  String?
  status           OrderItemStatus @default(PENDING)
  isReadBuyer      Boolean         @default(false)
  isReadSeller     Boolean         @default(false)
  shippedAt        DateTime?
  shippingProofUrl String?
  trackingNumber   String?
  order            Order           @relation(fields: [orderId], references: [id])
  product          Product         @relation(fields: [productId], references: [id])
  seller           User            @relation(fields: [sellerId], references: [id])
}

model Category {
  id          String        @id @default(cuid())
  name        String
  description String?
  parentId    String?
  createdAt   DateTime      @default(now())
  deletedAt   DateTime?
  updatedAt   DateTime      @updatedAt
  status      CategrySatuts @default(HIDDEN)
  imageUrl    String?
  slug        String?
  sub_subName String?
  parent      Category?     @relation("Subcategories", fields: [parentId], references: [id])
  children    Category[]    @relation("Subcategories")
  products    Product[]

  @@unique([name, parentId])
}

model Video {
  id          String   @id @default(cuid())
  title       String
  url         String
  description String?
  thumbnail   String?
  createdAt   DateTime @default(now())
  category    String?
}

model Inquiry {
  id            String   @id @default(cuid())
  message       String
  response      String?
  createdAt     DateTime @default(now())
  buyerDeleted  Boolean  @default(false)
  productId     String?
  sellerDeleted Boolean  @default(false)
  sellerId      String
  buyerId       String
  buyerRead     Boolean  @default(false)
  buyerStarred  Boolean  @default(false)
  sellerRead    Boolean  @default(false)
  sellerStarred Boolean  @default(false)
  subject       String?
  buyer         User     @relation("buyer", fields: [buyerId], references: [id])
  product       Product? @relation(fields: [productId], references: [id])
  seller        User     @relation("seller", fields: [sellerId], references: [id])
}

model Rating {
  id        String   @id @default(cuid())
  userId    String
  productId String
  stars     Int
  comment   String?
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, productId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model documents {
  id        Int                    @id @default(autoincrement())
  text      String?
  metadata  Json?
  embedding Unsupported("vector")?
}

enum OrderItemStatus {
  CANCELLED
  PENDING
  DELIVERED
  PROCESSING
  SHIPPED
  RETURNED
}

enum NotificationStatus {
  UNREAD
  READ
  ARCHIVED
}

enum StripStatus {
  PENDING
  COMPLETED
  FAILED
}

enum Role {
  BUYER
  SELLER
  ADMIN
}

enum OrderPaymentStatus {
  PENDING
  CAPTURED
  REFUNDED
  CANCELLED
  PAID
  REQUIRE_CAPTURE
  SHIPPED
}

enum SettingType {
  GENERAL
  PAYMENT
  EMAIL
  SECURITY
}

enum ProductCondition {
  NEW
  USED
  LIKE_NEW
}

enum OrderStatus {
  PENDING
  SHIPPED
  DELIVERED
  CANCELLED
  PAID
  REQUIRE_CAPTURE
}

enum CategrySatuts {
  HIDDEN
  ACTIVE
  DELETING
}

enum ProductStatus {
  HIDDEN
  ACTIVE
  DELETING
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  INACTIVE
}

enum CompanyType {
  COMPANY
  PRIVATE
}

enum ServiceCategory {
  LAUNDRY
  DRY_CLEANING
  FINISHING
}
